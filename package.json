{
  "name": "jmrp.io_astro",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "astro dev",
    "prebuild": "node scripts/fetch-github-avatar.mjs",
    "build": "export DIST_DIR=dist_new && rm -rf $DIST_DIR && astro build --outDir $DIST_DIR && pagefind --site $DIST_DIR && DIST_DIR=$DIST_DIR npm run _postbuild && rm -rf dist_old && (mv dist dist_old || true) && mv $DIST_DIR dist && rm -rf dist_old && pnpm exec prettier --check .",
    "_postbuild": "node scripts/setup-sitemap.mjs && node scripts/move-inline-styles.mjs && node scripts/extract-css-data-uris.mjs && node scripts/extract-html-img-data-uris.mjs && node scripts/generate-sri-hashes.mjs && node scripts/generate-csp-hashes.mjs && (rm -rf /var/cache/nginx/* 2>/dev/null || true)",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/preact": "^4.1.3",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@iconify-json/carbon": "^1.2.15",
    "@iconify-json/fa-brands": "^1.2.2",
    "@iconify-json/fa-solid": "^1.2.2",
    "@iconify-json/logos": "^1.2.10",
    "@iconify-json/marketeq": "^1.2.2",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/simple-icons": "^1.2.63",
    "@iconify-json/vscode-icons": "^1.2.37",
    "astro": "^5.16.6",
    "astro-icon": "^1.1.5",
    "citation-js": "^0.7.21",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "preact": "^10.28.0",
    "rehype-external-links": "^3.0.0",
    "rehype-mathjax": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "remark-math": "^6.0.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@iconify-json/devicon": "^1.2.53",
    "@playwright/test": "^1.57.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@types/sanitize-html": "^2.16.0",
    "@types/xml2js": "^0.4.14",
    "axe-html-reporter": "^2.2.11",
    "glob": "^13.0.0",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "html-validate": "^10.5.0",
    "js-yaml": "^4.1.1",
    "pagefind": "^1.4.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "puppeteer": "^24.34.0",
    "rehype-mermaid": "^3.0.0",
    "rss-parser": "^3.13.0",
    "sharp": "^0.34.5",
    "svgo": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "vite-plugin-image-optimizer": "^2.0.3",
    "xml2js": "^0.6.2"
  }
}
