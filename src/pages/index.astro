---
/**
 * Home Page (Index).
 * Displays the hero section, biography, and quick links.
 * Content is configured via `src/data/config/site.yml`.
 */
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image, getImage } from "astro:assets";
import mehomeImg from "@assets/mehome.jpg";
import { Icon } from "astro-icon/components";
import { getEntry } from "astro:content";

const siteEntry = await getEntry("site", "config");
const siteData = siteEntry!.data;

const { hero } = siteData;

const widths = [200, 350, 400, 700];
const sizes = "(max-width: 768px) 200px, 350px";

// Generate optimized images for preload
const optimizedImages = await Promise.all(
    widths.map((w) =>
        getImage({
            src: mehomeImg,
            format: "webp",
            width: w,
            height: w, // Square aspect ratio
        }),
    ),
);

const imageSrcSet = optimizedImages
    .map((img, i) => `${img.src} ${widths[i]}w`)
    .join(", ");
---

<BaseLayout title={siteData.title} description={siteData.description}>
    <link
        slot="head"
        rel="preload"
        as="image"
        imagesrcset={imageSrcSet}
        imagesizes={sizes}
        fetchpriority="high"
    />
    <section class="hero" aria-label="Hero Section">
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    <h1>{hero.title}</h1>
                    <p
                        class="subtitle"
                        set:html={hero.subtitle.replace(/&(?!(amp|lt|gt|quot|apos);)/g, "&amp;")}
                    />
                    <div class="bio">
                        {
                            hero.bio.map((paragraph: string) => (
                                <p
                                    set:html={paragraph.replace(/&(?!(amp|lt|gt|quot|apos);)/g, "&amp;")}
                                />
                            ))
                        }
                    </div>
                </div>

                <div class="profile-image centered">
                    <div class="hero-image">
                        <Image
                            src={mehomeImg}
                            alt="JosÃ© Manuel Requena Plens"
                            width={350}
                            height={350}
                            widths={[200, 350, 400, 700]}
                            sizes="(max-width: 768px) 200px, 350px"
                            loading="eager"
                            fetchpriority="high"
                        />
                    </div>
                </div>
            </div>

            <div class="social-links-row">
                <a href="/cv" class="btn btn-primary">View CV</a>
                <a
                    href="https://github.com/jmrplens"
                    target="_blank"
                    class="btn btn-outline"
                    ><Icon name="fa-brands:github" /> GitHub</a
                >
                <a
                    href="https://mstdn.jmrp.io/@jmrplens"
                    target="_blank"
                    class="btn btn-outline"
                    ><Icon name="fa-brands:mastodon" /> Mastodon</a
                >
                <a href="/services" class="btn btn-outline"
                    ><Icon name="fa-solid:server" /> Services</a
                >
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .hero {
        padding: var(--space-xl) 0;
        background-color: var(--color-bg-secondary);
    }

    .hero-content {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: var(--space-xl);
        align-items: start;
        margin-bottom: var(--space-xl);
    }

    .social-links-row {
        display: flex;
        gap: var(--space-md);
        flex-wrap: wrap;
        justify-content: flex-start;
        margin-top: var(--space-lg);
    }

    .social-links-row svg {
        width: 1em;
        height: 1em;
    }

    .hero-text {
        /* Stabilize height against font swaps to prevent footer shift */
        min-height: 380px;
    }

    .hero-text h1 {
        font-size: 3rem;
        margin-bottom: var(--space-md);
        line-height: 1.2;
    }

    .subtitle {
        font-size: 1.5rem;
        color: var(--color-text);
        margin-bottom: var(--space-md);
        min-height: 1.2em; /* Reserve space for one line */
    }

    .bio {
        color: var(--color-text-muted);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .bio p {
        margin-bottom: var(--space-md);
    }

    .profile-image.centered {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .profile-image img {
        width: 100%;
        max-width: 350px;
        height: auto;
        aspect-ratio: 1/1;
        object-fit: cover;
        border-radius: var(--radius-lg);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border: 4px solid var(--color-bg-secondary);
    }

    .hero-image {
        width: 100%;
        height: 100%;
        display: flex;
        aspect-ratio: 1 / 1;
    }

    /* Sections */
    section {
        padding: var(--space-lg) 0;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: var(--space-lg);
        position: relative;
        display: inline-block;
    }

    h2::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 40px;
        height: 4px;
        background-color: var(--color-primary);
        border-radius: 2px;
    }

    @media (max-width: 768px) {
        .hero-content {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .profile-image {
            order: -1;
            width: 200px; /* Fixed width */
            max-width: 200px;
            min-height: 200px; /* Reserve vertical space */
            margin: 0 auto var(--space-lg) auto; /* Center and keep bottom margin */
            aspect-ratio: 1 / 1; /* Reserve space for image */
        }

        .social-links-row {
            justify-content: center;
        }

        .bio {
            text-align: left; /* Keep bio readable */
        }

        .hero-text {
            text-align: center;
            min-height: auto;
        }
    }

    /* Projects */
    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: var(--space-lg);
    }

    .project-card {
        background-color: var(--color-bg-secondary);
        border-radius: var(--radius-md);
        overflow: hidden;
        border: var(--border-1);
        transition:
            transform 0.2s,
            box-shadow 0.2s;
    }

    .project-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        text-decoration: none;
        border-color: var(--color-primary);
    }

    .project-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-content {
        padding: var(--space-md);
    }

    .card-content h3 {
        margin: 0 0 var(--space-sm) 0;
        color: var(--color-text);
    }

    .card-content p {
        margin: 0;
        font-size: 0.95rem;
        color: var(--color-text-muted);
    }
</style>
