---
/**
 * Blog Post Page ([...slug].astro).
 * Renders individual blog posts dynamically based on their slug.
 * Includes support for:
 * - Custom components (Callout, CodeTabs, YouTube) in MDX
 * - Automated Table of Contents generation
 * - SEO Schema for blog postings
 */
import { type CollectionEntry, getCollection, getEntry } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

import Callout from "@components/ui/Callout.astro";
import Tabs from "@components/ui/Tabs.astro";
import TabPanel from "@components/ui/TabPanel.astro";
import YouTube from "@components/ui/YouTube.astro";
import Code from "@components/ui/Code.astro";
import TableOfContentsDrawer from "@components/layout/TableOfContentsDrawer.astro";
import References from "@components/cv/References.astro";

const siteEntry = await getEntry("site", "config");
const siteData = siteEntry!.data;

export async function getStaticPaths() {
    const posts = await getCollection("posts");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}

type Props = CollectionEntry<"posts">;

const post = Astro.props;
const { Content, headings } = await post.render();

// --- Reference Collection Logic ---
// Regex to find all markdown links: [text](url)
const linkRegex = /\[([^\]]+)\]\((https?:\/\/[^\)]+)\)/g;
const collectedRefsFromMarkdown = [];
let match;
while ((match = linkRegex.exec(post.body)) !== null) {
    collectedRefsFromMarkdown.push({ text: match[1], url: match[2] });
}

// Also find raw <a> tags in the body, as MDX allows HTML
const htmlLinkRegex =
    /<a\s+(?:[^>]*?\s+)?href="(https?:\/\/[^"]*)"[^>]*>([\s\S]*?)<\/a>/gi;
while ((match = htmlLinkRegex.exec(post.body)) !== null) {
    const url = match[1];
    // Sanitize inner HTML to get a readable text version
    const rawText = match[2];
    const text = rawText
        .replace(/<[^>]+>/g, " ")
        .replace(/\s+/g, " ")
        .trim();
    if (text) {
        collectedRefsFromMarkdown.push({ text, url });
    }
}

// Combine frontmatter references with collected ones and deduplicate
// Combine collected references and deduplicate
const allPostReferences = [...collectedRefsFromMarkdown];
const uniqueUrls = new Set<string>();
const finalReferences = allPostReferences.filter((ref) => {
    if (!uniqueUrls.has(ref.url)) {
        uniqueUrls.add(ref.url);
        return true;
    }
    return false;
});
// --- End of Reference Logic ---

// --- Image Optimization (JSON-LD) ---
import { getImage } from "astro:assets";

let jsonLdImage = "/default-blog-cover.jpg";

if (post.data.coverImage) {
    // Optimize for JSON-LD schema
    const optimizedImage = await getImage({
        src: post.data.coverImage,
        format: "webp",
        width: 1200,
        height: 675,
        quality: 60,
    });

    jsonLdImage = optimizedImage.src;
}

const articleSchema = [
    {
        "@type": "BlogPosting",
        "@id":
            new URL(`/blog/${post.slug}`, Astro.site).toString() + "#article",
        headline: post.data.title,
        description: post.data.description,
        datePublished: post.data.publishedDate.toISOString(),
        dateModified: (
            post.data.updatedDate || post.data.publishedDate
        ).toISOString(),
        author: {
            "@type": "Person",
            "@id": `${siteData.url}/#person`,
            name: siteData.author,
            url: siteData.url,
        },
        publisher: {
            "@type": "Person",
            "@id": `${siteData.url}/#person`,
            name: siteData.author,
            url: siteData.url,
        },
        image: new URL(jsonLdImage, Astro.site).toString(),
        mainEntityOfPage: {
            "@type": "WebPage",
            "@id": new URL(`/blog/${post.slug}`, Astro.site).toString(),
        },
    },
    {
        "@type": "BreadcrumbList",
        itemListElement: [
            {
                "@type": "ListItem",
                position: 1,
                name: "Blog",
                item: new URL("/blog", Astro.site).toString(),
            },
            {
                "@type": "ListItem",
                position: 2,
                name: post.data.title,
                item: new URL(`/blog/${post.slug}`, Astro.site).toString(),
            },
        ],
    },
];
---

<BaseLayout
    title={post.data.title}
    description={post.data.description}
    type="article"
    image={post.data.coverImage}
    publishDate={post.data.publishedDate}
    modifiedDate={post.data.updatedDate}
    tags={post.data.tags}
    schema={articleSchema}
>
    <article class="post-content">
        <header class="post-header">
            <div class="content-wrapper">
                <a href="/blog" class="back-link">
                    <Icon name="mdi:arrow-left" /> Back to Blog
                </a>
                <div class="meta">
                    <span class="author">
                        {post.data.author || siteData.author}
                    </span>
                    <span class="separator">•</span>
                    <time datetime={post.data.publishedDate.toISOString()}>
                        {
                            post.data.publishedDate.toLocaleDateString(
                                "en-US",
                                {
                                    year: "numeric",
                                    month: "long",
                                    day: "numeric",
                                },
                            )
                        }
                    </time>
                    <span class="separator">•</span>
                    {
                        post.data.tags && (
                            <div class="tags">
                                {post.data.tags.map((tag) => (
                                    <span class="tag">#{tag}</span>
                                ))}
                            </div>
                        )
                    }
                </div>
                <h1>{post.data.title}</h1>
                <p class="lead">{post.data.description}</p>
                {
                    post.data.coverImage && (
                        <div class="cover-image-container">
                            <Image
                                src={post.data.coverImage}
                                alt={`Cover image for ${post.data.title}`}
                                class="cover-image"
                                width={1200}
                                height={675}
                                format="webp"
                                loading="eager"
                                fetchpriority="high"
                                widths={[360, 480, 640, 720, 960, 1200]}
                                sizes="(max-width: 768px) 100vw, 1200px"
                                quality={60}
                            />
                        </div>
                    )
                }
            </div>
        </header>

        <div class="layout-grid content-wrapper">
            <div class="toc-sidebar">
                {
                    headings.length > 0 && (
                        <nav class="toc" aria-label="Table of Contents">
                            <h2>Table of Contents</h2>
                            <ul>
                                {headings.map((heading) => (
                                    <li class={`toc-depth-${heading.depth}`}>
                                        <a href={`#${heading.slug}`}>
                                            {heading.text}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </nav>
                    )
                }

                <button
                    class="desktop-toc-btn toc-trigger"
                    type="button"
                    aria-label="Open Table of Contents"
                >
                    <Icon name="mdi:format-list-bulleted" />
                    <span>Contents</span>
                </button>
            </div>

            <div class="prose">
                <Content
                    components={{ Callout, Tabs, TabPanel, YouTube, Code }}
                />
                <References references={finalReferences} />
            </div>
        </div>
    </article>

    <TableOfContentsDrawer headings={headings} />
</BaseLayout>

<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        // Accessibility: Fix duplicate role="region" on code blocks
        // We use requestIdleCallback to avoid forced reflows during initial layout
        // caused by reading/writing DOM concurrently with scripts.
        const rIC = window.requestIdleCallback || ((cb) => setTimeout(cb, 50));

        const applyLabels = () => {
            rIC(() => {
                const codeBlocks = document.querySelectorAll(
                    'pre[role="region"]:not([aria-label])',
                );
                codeBlocks.forEach((block, index) => {
                    const lang = block.getAttribute("data-language") || "Code";
                    block.setAttribute(
                        "aria-label",
                        `${lang} example ${index + 1}`,
                    );
                });
            });
        };

        // Run once initially, but slightly deferred
        setTimeout(applyLabels, 100);

        // Debounced observer for hydration changes
        const prose = document.querySelector(".prose");
        if (prose) {
            let timeout;
            const observer = new MutationObserver(() => {
                clearTimeout(timeout);
                timeout = setTimeout(applyLabels, 300);
            });
            observer.observe(prose, {
                childList: true,
                subtree: true,
                attributes: true,
                attributeFilter: ["role"],
            });
        }

        const tocNav = document.querySelector(".toc");
        if (!tocNav) return;

        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (!entry.isIntersecting) {
                        document.body.classList.add("desktop-toc-visible");
                    } else {
                        document.body.classList.remove("desktop-toc-visible");
                    }
                });
            },
            {
                // Use a hardcoded value or a safe default instead of reading from DOM
                rootMargin: "-80px 0px 0px 0px",
                threshold: 0,
            },
        );

        observer.observe(tocNav);
    });

    // Add copy buttons to standalone code blocks
    // Only for blocks not inside FileContent, Tabs, or CompareCode components
    const setupCodeCopyButtons = () => {
        const proseContent = document.querySelector(".prose");
        if (!proseContent) return;

        // Find all Shiki code blocks
        const codeBlocks = proseContent.querySelectorAll(".astro-code");

        codeBlocks.forEach((block) => {
            // Skip if already inside a special component
            if (
                block.closest(".file-content-wrapper") ||
                block.closest(".tab-panel") ||
                block.closest(".compare-block")
            ) {
                return; // Already handled by component
            }

            // Check if we already added our button
            if (block.querySelector("copy-button")) {
                return; // Already processed
            }

            // Create our custom-element copy button
            const copyWrapper = document.createElement("copy-button");
            const copyButton = document.createElement("button");
            copyButton.className = "copy-button custom-code-copy-btn";
            copyButton.setAttribute("aria-label", "Copy to clipboard");
            copyButton.type = "button";

            const svgNS = "http://www.w3.org/2000/svg";

            // Create copy icon
            const copyIcon = document.createElementNS(svgNS, "svg");
            copyIcon.setAttribute("class", "copy-icon");
            copyIcon.setAttribute("width", "20");
            copyIcon.setAttribute("height", "20");
            copyIcon.setAttribute("viewBox", "0 0 24 24");
            copyIcon.setAttribute("aria-hidden", "true");
            const copyPath = document.createElementNS(svgNS, "path");
            copyPath.setAttribute("fill", "currentColor");
            copyPath.setAttribute(
                "d",
                "M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z",
            );
            copyIcon.appendChild(copyPath);

            // Create success icon
            const successIcon = document.createElementNS(svgNS, "svg");
            successIcon.setAttribute("class", "success-icon hidden");
            successIcon.setAttribute("width", "20");
            successIcon.setAttribute("height", "20");
            successIcon.setAttribute("viewBox", "0 0 24 24");
            successIcon.setAttribute("aria-hidden", "true");
            const successPath = document.createElementNS(svgNS, "path");
            successPath.setAttribute("fill", "currentColor");
            successPath.setAttribute(
                "d",
                "M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z",
            );
            successIcon.appendChild(successPath);

            copyButton.appendChild(copyIcon);
            copyButton.appendChild(successIcon);
            copyWrapper.appendChild(copyButton);

            // Add the button to the block
            block.appendChild(copyWrapper);
        });
    };

    document.addEventListener("DOMContentLoaded", setupCodeCopyButtons);
    document.addEventListener("astro:page-load", setupCodeCopyButtons);
</script>

<style>
    /* ... existing styles ... */
    .lead {
        font-size: 1.25rem;
        color: var(--color-text-body);
        max-width: 70ch;
        line-height: 1.6;
        opacity: 0.9;
        min-height: 3.2em; /* Reserve 2 lines */
