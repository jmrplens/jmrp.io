    .tag {
        color: var(--color-primary);
        font-weight: var(--fw-semibold);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Stabilize Generic Content Images (Mermaid, etc.) */
    .prose :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius-md);
        /* Ensure SVGs have a default aspect ratio or behavior to minimize shift */
        content-visibility: auto;
    }

    .layout-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-xl);
        max-width: var(--max-width-container);
        margin: 0 auto;
        padding: 0 var(--space-md);
        position: relative;
    }

    .prose {
        max-width: var(--max-width-prose);
        margin: 0 auto;
        width: 100%;
        min-width: 0; /* Allow shrinking below content size in Grid */
        overflow-wrap: break-word; /* Ensure text wraps */
    }

    /* Enhance link contrast in post content */
    .prose :global(a) {
        font-weight: var(--fw-semibold);
    }

    .prose :global(li) {
        min-height: 1.5em; /* Stabilize for CLS (font shifts) */
    }

    .toc-sidebar {
        /* position: sticky; <--- Removing sticky for the container */
        top: 2rem;
        height: 100%; /* Fill height */
        display: none;
    }

    .desktop-toc-btn {
        position: sticky;
        top: calc(var(--header-height) + 0.5rem);
        margin-top: 1rem;

        display: none; /* Hidden by default */
        align-items: center;
        gap: 0.5rem;

        background-color: var(--color-bg-secondary);
        border: var(--border-1);
        color: var(--color-text-muted);
        padding: 0.75rem 1rem;
        border-radius: var(--radius-md);
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        width: fit-content;
        transition: all 0.2s;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        z-index: 10;
    }

    /* Only show the button when the body class is present (toggled by JS) */
    :global(.desktop-toc-visible) .desktop-toc-btn {
        display: flex;
        animation: fadeIn 0.3s ease;
    }

    .desktop-toc-btn:hover {
        background-color: var(--color-bg-hover);
        color: var(--color-primary);
        border-color: var(--color-primary);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .toc ul {
        list-style: none;
        padding: 0;
    }

    .toc li {
        margin-bottom: 0.5rem;
    }

    .toc li a {
        text-decoration: none;
        color: var(--color-text-muted);
        font-size: 0.9rem;
        transition: color 0.2s;
        display: block;
        padding: 0.2rem 0;
    }

    .toc li a:hover {
        color: var(--color-primary);
    }

    /* TOC Indentation */
    .toc-depth-2 {
        padding-left: 0;
    }
    .toc-depth-3 {
        padding-left: 1rem;
        font-size: 0.85rem;
    }
    .toc-depth-4 {
        padding-left: 2rem;
        font-size: 0.85rem;
    }
    .toc-depth-5 {
        padding-left: 3rem;
    }
    .toc-depth-6 {
        padding-left: 4rem;
    }

    @media (min-width: 1024px) {
        .toc-sidebar {
            display: block;
        }

        .layout-grid {
            grid-template-columns: 250px minmax(0, 1fr);
            gap: 4rem;
        }
    }

    /* ... omitted intermediate css ... */

    @media (max-width: 768px) {
        .post-header {
            padding: 4rem 0 2rem;
            text-align: left;
        }

        h1 {
            font-size: 1.75rem; /* Reduce size to minimize wrapping */
            min-height: 4em; /* Stabilize roughly 3-4 lines */
            text-wrap: initial; /* frequent recalc of balance can cause shifts, revert to standard */
        }

        .lead {
            font-size: 1.125rem;
            min-height: 5em; /* Stabilize roughly 4 lines */
        }

        .content-wrapper {
            padding: 0 1.5rem;
        }
    }

    /* Custom copy button for standalone code blocks */
    :global(.astro-code > copy-button) {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        z-index: 10;
    }

    :global(.custom-code-copy-btn) {
        opacity: 0.8;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 32px;
        min-height: 32px;
    }

    :global(.custom-code-copy-btn:hover) {
        opacity: 1;
        background-color: var(--color-bg-secondary, #222);
    }

    :global(.custom-code-copy-btn:active) {
        transform: scale(0.95);
    }

    :global(.custom-code-copy-btn .copy-icon),
    :global(.custom-code-copy-btn .success-icon) {
        width: 1.2rem;
        height: 1.2rem;
        color: var(--color-text-muted, #888);
        display: block;
    }

    :global(.custom-code-copy-btn .success-icon) {
        color: var(--color-success, #2ea043);
    }

    :global(.custom-code-copy-btn .hidden) {
        display: none;
    }
</style>
