        position: relative !important;
    }

    .cover-image-container {
        margin-top: 3rem;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        background-color: var(--color-bg-secondary);
        aspect-ratio: 16 / 9;
    }

    .cover-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        min-height: 1.5em; /* Stabilize for CLS */
