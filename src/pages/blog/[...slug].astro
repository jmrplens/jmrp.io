---
/**
 * Blog Post Page ([...slug].astro).
 * Renders individual blog posts dynamically based on their slug.
 * Includes support for:
 * - Custom components (Callout, CodeTabs, YouTube) in MDX
 * - Automated Table of Contents generation
 * - SEO Schema for blog postings
 */
import { type CollectionEntry, getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

import Callout from "../../components/Callout.astro";
import Tabs from "../../components/Tabs.astro";
import TabPanel from "../../components/TabPanel.astro";
import YouTube from "../../components/YouTube.astro";
import Code from "../../components/Code.astro";
import TableOfContentsDrawer from "../../components/TableOfContentsDrawer.astro";
import References from "../../components/References.astro";

import fs from "fs";
import path from "path";
import yaml from "js-yaml";

const sitePath = path.join(process.cwd(), "src/data/site.yml");
const siteRaw = fs.readFileSync(sitePath, "utf8");
const siteData = yaml.load(siteRaw) as any;

export async function getStaticPaths() {
    const posts = await getCollection("posts");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}

type Props = CollectionEntry<"posts">;

const post = Astro.props;
const { Content, headings } = await post.render();

// --- Reference Collection Logic ---
// Regex to find all markdown links: [text](url)
const linkRegex = /\[([^\]]+)\]\((https?:\/\/[^\)]+)\)/g;
const collectedRefsFromMarkdown = [];
let match;
while ((match = linkRegex.exec(post.body)) !== null) {
    collectedRefsFromMarkdown.push({ text: match[1], url: match[2] });
}

// Also find raw <a> tags in the body, as MDX allows HTML
const htmlLinkRegex =
    /<a\s+(?:[^>]*?\s+)?href="(https?:\/\/[^"]*)"[^>]*>([\s\S]*?)<\/a>/gi;
while ((match = htmlLinkRegex.exec(post.body)) !== null) {
    const url = match[1];
    // Sanitize inner HTML to get a readable text version
    const rawText = match[2];
    const text = rawText
        .replace(/<[^>]+>/g, " ")
        .replace(/\s+/g, " ")
        .trim();
    if (text) {
        collectedRefsFromMarkdown.push({ text, url });
    }
}

// Combine frontmatter references with collected ones and deduplicate
// Combine collected references and deduplicate
const allPostReferences = [...collectedRefsFromMarkdown];
const uniqueUrls = new Set<string>();
const finalReferences = allPostReferences.filter((ref) => {
    if (!uniqueUrls.has(ref.url)) {
        uniqueUrls.add(ref.url);
        return true;
    }
    return false;
});
// --- End of Reference Logic ---

const articleSchema = [
    {
        "@type": "BlogPosting",
        "@id":
            new URL(`/blog/${post.slug}`, Astro.site).toString() + "#article",
        headline: post.data.title,
        description: post.data.description,
        datePublished: post.data.publishedDate.toISOString(),
        dateModified: (
            post.data.updatedDate || post.data.publishedDate
        ).toISOString(),
        author: {
            "@type": "Person",
            "@id": `${siteData.url}/#person`,
            name: siteData.author,
            url: siteData.url,
        },
        publisher: {
            "@type": "Person",
            "@id": `${siteData.url}/#person`,
            name: siteData.author,
            url: siteData.url,
        },
        image: new URL(
            post.data.coverImage?.src || "/default-blog-cover.jpg",
            Astro.site,
        ).toString(),
        mainEntityOfPage: {
            "@type": "WebPage",
            "@id": new URL(`/blog/${post.slug}`, Astro.site).toString(),
        },
    },
    {
        "@type": "BreadcrumbList",
        itemListElement: [
            {
                "@type": "ListItem",
                position: 1,
                name: "Blog",
                item: new URL("/blog", Astro.site).toString(),
            },
            {
                "@type": "ListItem",
                position: 2,
                name: post.data.title,
                item: new URL(`/blog/${post.slug}`, Astro.site).toString(),
            },
        ],
    },
];
---

<BaseLayout
    title={post.data.title}
    description={post.data.description}
    type="article"
    image={post.data.coverImage}
    publishDate={post.data.publishedDate}
    modifiedDate={post.data.updatedDate}
    tags={post.data.tags}
    schema={articleSchema}
    tags={post.data.tags}
    schema={articleSchema}
>
    <article class="post-content">
        <header class="post-header">
            <div class="content-wrapper">
                <a href="/blog" class="back-link">
                    <Icon name="mdi:arrow-left" /> Back to Blog
                </a>
                <div class="meta">
                    <span class="author">
                        {post.data.author || siteData.author}
                    </span>
                    <span class="separator">•</span>
                    <time datetime={post.data.publishedDate.toISOString()}>
                        {
                            post.data.publishedDate.toLocaleDateString(
                                "en-US",
                                {
                                    year: "numeric",
                                    month: "long",
                                    day: "numeric",
                                },
                            )
                        }
                    </time>
                    <span class="separator">•</span>
                    {
                        post.data.tags && (
                            <div class="tags">
                                {post.data.tags.map((tag) => (
                                    <span class="tag">#{tag}</span>
                                ))}
                            </div>
                        )
                    }
                </div>
                <h1>{post.data.title}</h1>
                <p class="lead">{post.data.description}</p>
                {
                    post.data.coverImage && (
                        <div class="cover-image-container">
                            <Image
                                src={post.data.coverImage}
                                alt={`Cover image for ${post.data.title}`}
                                class="cover-image"
                                loading="eager"
                            />
                        </div>
                    )
                }
            </div>
        </header>

        <div class="layout-grid content-wrapper">
            <div class="toc-sidebar">
                {
                    headings.length > 0 && (
                        <nav class="toc" aria-label="Table of Contents">
                            <h2>Table of Contents</h2>
                            <ul>
                                {headings.map((heading) => (
                                    <li class={`toc-depth-${heading.depth}`}>
                                        <a href={`#${heading.slug}`}>
                                            {heading.text}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </nav>
                    )
                }

                <button
                    class="desktop-toc-btn toc-trigger"
                    type="button"
                    aria-label="Open Table of Contents"
                >
                    <Icon name="mdi:format-list-bulleted" />
                    <span>Contents</span>
                </button>
            </div>

            <div class="prose">
                <Content
                    components={{ Callout, Tabs, TabPanel, YouTube, Code }}
                />
                <References references={finalReferences} />
            </div>
        </div>
    </article>

    <TableOfContentsDrawer headings={headings} />
</BaseLayout>

<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        // Accessibility: Fix duplicate role="region" on code blocks
        // Expressive Code adds role="region" via JS, so we need to observe changes
        const applyLabels = () => {
            const codeBlocks = document.querySelectorAll(
                'pre[role="region"]:not([aria-label])',
            );
            codeBlocks.forEach((block, index) => {
                const lang = block.getAttribute("data-language") || "Code";
                block.setAttribute(
                    "aria-label",
                    `${lang} example ${index + 1}`,
                );
            });
        };

        // Run once initially
        applyLabels();

        // Observe for changes (if Expressive Code hydrates later)
        const prose = document.querySelector(".prose");
        if (prose) {
            const observer = new MutationObserver(() => {
                applyLabels();
            });
            observer.observe(prose, {
                childList: true,
                subtree: true,
                attributes: true,
                attributeFilter: ["role"],
            });
        }

        const tocNav = document.querySelector(".toc");
        if (!tocNav) return;

        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (!entry.isIntersecting) {
                        document.body.classList.add("desktop-toc-visible");
                    } else {
                        document.body.classList.remove("desktop-toc-visible");
                    }
                });
            },
            {
                rootMargin: `-${getComputedStyle(document.documentElement).getPropertyValue("--header-height").trim()} 0px 0px 0px`,
                threshold: 0,
            },
        );

        observer.observe(tocNav);
    });

    // Replace Expressive Code copy buttons with our custom buttons
    // Only for standalone code blocks (not inside FileContent, Tabs, CompareCode)
    document.addEventListener("DOMContentLoaded", () => {
        // Find all .expressive-code blocks in the prose content
        const proseContent = document.querySelector(".prose");
        if (!proseContent) return;

        const codeBlocks = proseContent.querySelectorAll(".expressive-code");

        codeBlocks.forEach((block) => {
            // Skip if already inside a special component
            if (
                block.closest(".file-content-wrapper") ||
                block.closest(".tab-panel") ||
                block.closest(".compare-block")
            ) {
                return; // Already handled by component
            }

            // Hide the Expressive Code copy button
            const expressiveButton = block.querySelector(".copy");
            if (expressiveButton instanceof HTMLElement) {
                expressiveButton.style.display = "none";
            }

            // Check if we already added our button
            if (block.querySelector(".custom-code-copy-btn")) {
                return; // Already processed
            }

            // Create our custom copy button
            const copyButton = document.createElement("button");
            copyButton.className = "custom-code-copy-btn";
            copyButton.setAttribute("aria-label", "Copy to clipboard");
            copyButton.innerHTML = `
                <svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" />
                </svg>
                <svg class="success-icon hidden" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z" />
                </svg>
            `;

            // Add click handler
            copyButton.addEventListener("click", () => {
                const codeElement = block.querySelector("code");
                const text = codeElement ? codeElement.textContent : null;

                if (!text) {
                    console.warn("No code element found in block.");
                    return;
                }

                navigator.clipboard.writeText(text).then(
                    () => {
                        const copyIcon = copyButton.querySelector(".copy-icon");
                        const successIcon =
                            copyButton.querySelector(".success-icon");

                        if (copyIcon instanceof HTMLElement) {
                            if (successIcon instanceof HTMLElement) {
                                copyIcon.classList.add("hidden");
                                successIcon.classList.remove("hidden");

                                setTimeout(() => {
                                    copyIcon.classList.remove("hidden");
                                    successIcon.classList.add("hidden");
                                }, 2000);
                            }
                        }
                    },
                    (err) => {
                        console.error("Failed to copy:", err);
                    },
                );
            });

            // Make the block relative for positioning
            if (block instanceof HTMLElement) {
                block.style.position = "relative";
            }

            // Add the button to the block
            block.appendChild(copyButton);
        });
    });
</script>

