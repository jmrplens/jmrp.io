---
/**
 * Blog Index Page.
 * Lists all published blog posts, sorted by date (newest first).
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const posts = (await getCollection("posts"))
    .filter((post) => !post.data.draft)
    .sort(
        (a, b) =>
            b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf(),
    );
---

<BaseLayout
    title="Blog"
    description="Writing about software development, home lab, and engineering."
>
    <div class="content-wrapper">
        <header class="page-header">
            <h1 class="gradient-text">Blog</h1>
            <p class="subtitle">Thoughts, tutorials, and engineering notes.</p>
        </header>

        <section class="posts-grid" aria-label="Blog posts grid">
            {
                posts.map((post) => (
                    <article class="post-card">
                        <a href={`/blog/${post.slug}/`}>
                            {post.data.coverImage && (
                                <div class="image-container">
                                    <Image
                                        src={post.data.coverImage}
                                        alt={post.data.title}
                                        format="webp"
                                        class="card-image"
                                        width={400}
                                        height={225}
                                        widths={[400, 800]}
                                        sizes="(max-width: 640px) 100vw, 400px"
                                    />
                                </div>
                            )}
                            <div class="card-content">
                                <div class="post-meta">
                                    <time
                                        datetime={post.data.publishedDate.toISOString()}
                                    >
                                        {post.data.publishedDate.toLocaleDateString(
                                            "en-US",
                                            {
                                                year: "numeric",
                                                month: "short",
                                                day: "numeric",
                                            },
                                        )}
                                    </time>
                                    {post.data.tags && (
                                        <div class="tags">
                                            {post.data.tags
                                                .slice(0, 3)
                                                .map((tag) => (
                                                    <span class="tag">
                                                        #{tag}
                                                    </span>
                                                ))}
                                        </div>
                                    )}
                                </div>
                                <h2>{post.data.title}</h2>
                                <p>{post.data.description}</p>
                            </div>
                            <div class="card-footer">
                                <span class="read-more">
                                    Read article &rarr;
                                </span>
                            </div>
                        </a>
                    </article>
                ))
            }
        </section>
    </div>
</BaseLayout>

<style>
    .content-wrapper {
        .blog-container {
            max-width: var(--max-width-container);
            margin: 0 auto;
            padding: 0 var(--space-md);
        }
        margin: 0 auto;
        padding: 4rem 2rem;
        width: 100%;
    }

    .page-header {
        margin-bottom: 4rem;
        text-align: center;
    }

    .page-header h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .gradient-text {
        color: var(--color-primary);
    }

    .subtitle {
        font-size: 1.25rem;
        color: var(--color-text-muted);
    }

    .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 2rem;
    }

    .post-card {
        background: var(--color-bg-secondary);
        border: var(--border-1);
        border-radius: 16px;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        position: relative;
    }

    .post-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px -10px rgba(0, 0, 0, 0.15);
        border-color: var(--color-primary);
    }

    .post-card a {
        display: flex;
        flex-direction: column;
        height: 100%;
        text-decoration: none;
        color: inherit;
    }

    /* Image Card Styles */
    .image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 9;
        overflow: hidden;
    }

    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .post-card:hover .card-image {
        transform: scale(1.05);
    }

    /* Standard Card Styles */
    .card-content {
        padding: 2rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.875rem;
        color: var(--color-text-muted);
    }

    .tags {
        display: flex;
        gap: 0.5rem;
    }

    .tag {
        background: var(--color-bg-subtle);
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--color-text-body);
    }

    .post-card h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: var(--color-text-heading);
        line-height: 1.3;
    }

    .post-card p {
        color: var(--color-text-body);
        line-height: 1.6;
        font-size: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-footer {
        padding: 1.5rem 2rem;
        border-top: var(--border-1);
        background: var(--color-bg-subtle);
    }

    .read-more {
        font-weight: var(--fw-semibold);
        color: var(--color-primary);
        font-size: 0.9rem;
    }

    @media (max-width: 640px) {
        .content-wrapper {
            padding: 2rem 1rem;
        }

        .page-header h1 {
            font-size: 2.5rem;
        }

        .posts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
