---
/**
 * BaseHead component.
 * Included in all pages to handle:
 * - Global metadata (charset, viewport)
 * - SEO tags (title, description, keywords)
 * - Open Graph and Twitter cards
 * - JSON-LD Schema.org structured data
 * - Favicons and fonts
 */
import "../styles/global.css";
// Supports weights 100-900
import "../styles/fonts.css";

import { getImage } from "astro:assets";
import faviconSrc from "../assets/favicon.png";
import appleTouchIconSrc from "../assets/apple-touch-icon.png";

import fs from "fs";
import path from "path";
import yaml from "js-yaml";

const favicon = await getImage({
    src: faviconSrc,
    format: "webp",
    width: 32,
    height: 32,
});
const appleTouchIcon = await getImage({
    src: appleTouchIconSrc,
    format: "webp",
    width: 180,
    height: 180,
});

const sitePath = path.join(process.cwd(), "src/data/site.yml");
const siteRaw = fs.readFileSync(sitePath, "utf8");
const siteData = yaml.load(siteRaw) as any;

interface Props {
    title: string;
    description?: string;
    image?: string;
    type?: string;
    schema?: any; // Custom JSON-LD schema to override default
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
    title,
    description = siteData.description,
    image = siteData.image,
    type = "website",
    schema,
} = Astro.props;

// Default Schema if none provided
const websiteSchema = {
    "@type": "WebSite",
    url: siteData.url,
    name: "José M. Requena Plens",
    headline: title,
    description: description,
    author: {
        "@type": "Person",
        name: siteData.author,
    },
};

const navSchema = (siteData.nav || []).map((item: any) => ({
    "@type": "SiteNavigationElement",
    name: item.label,
    url: new URL(item.href, siteData.url).toString(),
}));

const defaultSchema = {
    "@context": "https://schema.org",
    "@graph": [websiteSchema, ...navSchema],
};

const jsonLD = schema || defaultSchema;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/webp" href={favicon.src} />
<link rel="apple-touch-icon" href={appleTouchIcon.src} />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content={siteData.theme_color} />
<meta name="robots" content="index, follow" />

<!-- SEO -->
<meta name="keywords" content={siteData.keywords} />
<meta name="author" content={siteData.author} />
<meta name="fediverse:creator" content={siteData.fediverse_creator} />

<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="800" />
<meta property="og:locale" content={siteData.locale} />
<meta property="og:site_name" content="José M. Requena Plens" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:site" content={siteData.twitter_creator} />
<meta property="twitter:creator" content={siteData.twitter_creator} />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- JSON-LD -->
<script
    type="application/ld+json"
    nonce="NGINX_CSP_NONCE"
    set:html={JSON.stringify(jsonLD)}
/>
