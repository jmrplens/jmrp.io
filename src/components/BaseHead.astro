---
/**
 * BaseHead component.
 * Included in all pages to handle:
 * - Global metadata (charset, viewport)
 * - SEO tags (title, description, keywords)
 * - Open Graph and Twitter cards
 * - JSON-LD Schema.org structured data (Merged Graph)
 * - Favicons and fonts
 */
import "../styles/global.css";
// Supports weights 100-900
import "../styles/fonts.css";

import { getImage } from "astro:assets";
import faviconSrc from "../assets/favicon.png";
import appleTouchIconSrc from "../assets/apple-touch-icon.png";
import defaultOgImage from "../assets/mehome_landscape.jpeg";

import fs from "fs";
import path from "path";
import yaml from "js-yaml";

const favicon = await getImage({
    src: faviconSrc,
    format: "webp",
    width: 32,
    height: 32,
});
const appleTouchIcon = await getImage({
    src: appleTouchIconSrc,
    format: "webp",
    width: 180,
    height: 180,
});

const sitePath = path.join(process.cwd(), "src/data/site.yml");
const siteRaw = fs.readFileSync(sitePath, "utf8");
const siteData = yaml.load(siteRaw) as any;

interface Props {
    title: string;
    description?: string;
    image?: string;
    type?: string;
    // Article specific props
    publishDate?: Date;
    modifiedDate?: Date;
    authors?: string[]; // Defaults to siteData.author
    tags?: string[];
    schema?: any; // Custom JSON-LD schema to merge or override
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
    title,
    description = siteData.description,
    image = siteData.image,
    type = "website",
    publishDate,
    modifiedDate,
    authors = [siteData.author],
    tags = [],
    schema,
} = Astro.props;

const fullTitle =
    title === siteData.title ? title : `${title} | ${siteData.author}`;

// Image resolution logic
let resolvedImage;
if (image) {
    // If props provide an image
    if (typeof image === "string") {
        // External URL or legacy path (though we shouldn't have legacy paths now)
        try {
            resolvedImage = new URL(image, Astro.url);
        } catch {
            // Relative path or other, try to resolve against site
            resolvedImage = new URL(image, siteData.url);
        }
    } else {
        // It's likely an imported Image object passed via props
        resolvedImage = image.src
            ? new URL(image.src, Astro.url)
            : new URL(image, Astro.url);
    }
} else {
    // Fallback to default site image (imported)
    // We strictly use the imported asset for the default to ensure optimization
    const optimizedDefault = await getImage({
        src: defaultOgImage,
        format: "webp",
        width: 1200,
        height: 630,
    });
    resolvedImage = new URL(optimizedDefault.src, Astro.url);
}

// --- Schema.org Construction ---

// 1. WebSite Schema (Global)
const websiteSchema = {
    "@type": "WebSite",
    "@id": `${siteData.url}/#website`,
    url: siteData.url,
    name: "JosÃ© M. Requena Plens",
    description: siteData.description,
    inLanguage: siteData.locale,
    publisher: {
        "@type": "Person",
        "@id": `${siteData.url}/#person`,
        name: siteData.author,
        url: siteData.url,
        sameAs: [
            `https://twitter.com/${siteData.twitter_creator.replace("@", "")}`,
            // Add other social links if available in site.yml
        ],
    },
};

// 2. Navigation Schema
const navSchema = (siteData.nav || []).map((item: any) => ({
    "@type": "SiteNavigationElement",
    name: item.label,
    url: new URL(item.href, siteData.url).toString(),
}));

// 3. Merge Logic
// We use a @graph to include multiple items (Website, Page, Breadcrumbs, etc.)
let schemaGraph = [websiteSchema, ...navSchema];

if (schema) {
    if (Array.isArray(schema)) {
        schemaGraph = [...schemaGraph, ...schema];
    } else {
        schemaGraph.push(schema);
    }
}

const jsonLD = {
    "@context": "https://schema.org",
    "@graph": schemaGraph,
};
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/webp" href={favicon.src} />
<link rel="apple-touch-icon" href={appleTouchIcon.src} />
<link rel="manifest" href="/site.webmanifest" />
<link rel="sitemap" href="/sitemap.xml" />
<link
    rel="alternate"
    type="application/rss+xml"
    title="JMRP Blog RSS Feed"
    href="/rss.xml"
/>
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content={siteData.theme_color} />
<meta name="robots" content="index, follow" />

<!-- SEO -->
<meta name="keywords" content={siteData.keywords} />
<meta name="author" content={siteData.author} />
<meta name="fediverse:creator" content={siteData.fediverse_creator} />

<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={resolvedImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:locale" content={siteData.locale} />
<meta property="og:site_name" content={siteData.author} />

<!-- Article Specific OG Tags -->
{
    type === "article" && (
        <>
            {publishDate && (
                <meta
                    property="article:published_time"
                    content={publishDate.toISOString()}
                />
            )}
            {modifiedDate && (
                <meta
                    property="article:modified_time"
                    content={modifiedDate.toISOString()}
                />
            )}
            {authors.map((author) => (
                <meta property="article:author" content={author} />
            ))}
            {tags.map((tag) => (
                <meta property="article:tag" content={tag} />
            ))}
        </>
    )
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:site" content={siteData.twitter_creator} />
<meta property="twitter:creator" content={siteData.twitter_creator} />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={resolvedImage} />

<!-- JSON-LD -->
<script
    type="application/ld+json"
    nonce="NGINX_CSP_NONCE"
    set:html={JSON.stringify(jsonLD)}
/>
