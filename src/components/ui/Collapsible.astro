---
/**
 * A native HTML collapsible/details component for showing/hiding content.
 */
interface Props {
    summary: string;
}

const { summary } = Astro.props;
---

<details class="collapsible-wrapper">
    <summary>
        <span class="summary-text">{summary}</span>
        <span class="icon-wrapper" aria-hidden="true">
            <svg
                class="chevron"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
        </span>
    </summary>
    <div class="collapsible-content">
        <slot />
    </div>
</details>

<style>
    .collapsible-wrapper {
        border: var(--border-1);
        border-radius: var(--radius-md);
        margin: 1.5rem 0;
        background-color: var(--color-bg-secondary);
    }
    .collapsible-wrapper[open] {
        border-color: var(--color-primary);
    }

    summary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem 1rem;
        cursor: pointer;
        font-weight: 500;
        list-style: none; /* Remove default marker */
        color: var(--color-text);
        transition: background-color 0.2s;
    }
    summary::-webkit-details-marker {
        display: none; /* Remove default marker for Safari */
    }

    .collapsible-wrapper[open] > summary {
        border-bottom: var(--border-1);
        background-color: var(--color-bg-subtle);
    }

    .summary-text {
        font-family: var(--font-mono);
        font-size: 0.9rem;
    }

    .icon-wrapper {
        transition: transform 0.2s ease-in-out;
    }

    .collapsible-wrapper[open] > summary .icon-wrapper {
        transform: rotate(180deg);
    }

    .collapsible-content {
        padding: 1rem;
        border-top: var(--border-1);
    }

    .collapsible-wrapper[open] .collapsible-content {
        border-top: none;
    }
</style>
