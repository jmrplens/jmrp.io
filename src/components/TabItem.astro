---
/**
 * TabItem component.
 * Represents a single tab panel within a <Tabs> container.
 */
interface Props {
    label: string; // Tab title
    icon?: string; // Optional icon for the tab
}

const { label, icon } = Astro.props;
---

<div class="tab-panel" data-label={label} data-icon={icon}>
    <slot />
</div>
